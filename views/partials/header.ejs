                <li style="--bg: #FFFFFF;" class="active">
            <% } else { %>
                <li style="--bg: #FFFFFF;">
            <% } %>
                <a href="/dashboard">
                    <div class="icon">
                        <img width="35" height="35" src="https://img.icons8.com/ios/50/performance-macbook.png" alt="performance-macbook" />
                    </div>
                    <div class="text active">Dashboard</div>
                    <div class="icon icon_circle">
                        <div class="circle"></div>
                    </div>
                </a>
            </li>
            <% if (title && title === 'INVOICE') { %>
                <li style="--bg: #FFFFFF;" class="active">
            <% } else { %>
                <li style="--bg: #FFFFFF;">
