                    <div class="menuToggle active"></div>
                <% } else { %>
                    <div class="menuToggle"></div>
                <% } %>
                <div><%= pageName %></div>
            </div>
            <div class="side">
                <div style="margin-right: 10px;"><%= username %></div>
                <img src="img/img1.jpg" alt="Description of image">
