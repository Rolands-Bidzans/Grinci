                        <img width="35" height="35" src="https://img.icons8.com/ios/50/gmail--v2.png" alt="gmail--v2" />
                    </div>
                    <div class="text">E-mail</div>
                    <div class="icon icon_circle">
                        <div class="circle"></div>
                    </div>
                </a>
            </li>
            <% if (title && title === 'PROFILE') { %>
                <li style="--bg: #FFFFFF;" class="active">
            <% } else { %>
                <li style="--bg: #FFFFFF;">
            <% } %>
